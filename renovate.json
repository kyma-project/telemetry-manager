{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
      "area/dependency",
      "kind/chore"
    ],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": [
          "^\\.env$"
        ],
        "matchStrings": [
          "ENV_ISTIO_VERSION=(?<currentValue>\\d+?\\.\\d+?\\.\\d+?)"
        ],
        "datasourceTemplate": "github-releases",
        "versioningTemplate": "semver",
        "depNameTemplate": "kyma-project/istio"
      }
    ]
  }