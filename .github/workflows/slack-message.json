{
    "attachments": [
        {
            "color": "#d90000",
            "blocks": [
                {
                    "type": "section",
                    "text": {
                        "type": "mrkdwn",
                        "text": "${{ github.workflow }} workflow failed in the ${{ github.event.repository.name }} repository!"
                    }
                },
                {
                    "type": "divider"
                },
                {
                    "type": "actions",
                    "elements": [
                        {
                            "type": "button",
                            "text": {
                                "type": "plain_text",
                                "text": "Build",
                                "emoji": true
                            },
                            "url": "https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}"
                        },
                        {
                            "type": "button",
                            "text": {
                                "type": "plain_text",
                                "text": "Commit",
                                "emoji": true
                            },
                            "url": "https://github.com/${{ github.repository }}/commit/${{ github.sha }}"
                        }
                    ]
                }
            ]
        }
    ]
}